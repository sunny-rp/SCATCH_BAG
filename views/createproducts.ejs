<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Scatch | Create Product</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- Tailwind -->
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- Remix Icons -->
  <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">
</head>
<body class="bg-gray-50 text-gray-900">

  <%- include('./partials/header') %>

  <!-- Flash Messages (safe defaults) -->
  <% const _success = (typeof success !== 'undefined') ? success : []; %>
  <% const _error   = (typeof error   !== 'undefined') ? error   : []; %>

  <% if (Array.isArray(_success) && _success.length > 0) { %>
    <div class="fixed top-5 left-1/2 -translate-x-1/2 z-50">
      <div class="px-4 py-3 rounded-md bg-emerald-500 text-white shadow">
        <i class="ri-checkbox-circle-line mr-2"></i>
        <span><%= _success.join(', ') %></span>
      </div>
    </div>
  <% } else if (typeof _success === 'string' && _success.trim()) { %>
    <div class="fixed top-5 left-1/2 -translate-x-1/2 z-50">
      <div class="px-4 py-3 rounded-md bg-emerald-500 text-white shadow">
        <i class="ri-checkbox-circle-line mr-2"></i>
        <span><%= _success %></span>
      </div>
    </div>
  <% } %>

  <% if (Array.isArray(_error) && _error.length > 0) { %>
    <div class="fixed top-5 left-1/2 -translate-x-1/2 z-50">
      <div class="px-4 py-3 rounded-md bg-rose-500 text-white shadow">
        <i class="ri-error-warning-line mr-2"></i>
        <span><%= _error.join(', ') %></span>
      </div>
    </div>
  <% } else if (typeof _error === 'string' && _error.trim()) { %>
    <div class="fixed top-5 left-1/2 -translate-x-1/2 z-50">
      <div class="px-4 py-3 rounded-md bg-rose-500 text-white shadow">
        <i class="ri-error-warning-line mr-2"></i>
        <span><%= _error %></span>
      </div>
    </div>
  <% } %>

  <div class="min-h-screen flex flex-col">
    <div class="container mx-auto px-6 md:px-10 py-10 md:py-16 flex flex-grow gap-6">
      <!-- Sidebar -->
      <aside class="w-full md:w-1/4">
        <div class="bg-white rounded-xl p-6 shadow">
          <h3 class="text-lg font-semibold mb-4">Products</h3>
          <nav class="space-y-2">
            <a class="block w-fit text-blue-600 hover:underline" href="/products">All Products</a>
            <a class="block w-fit text-blue-600 hover:underline font-medium" href="/products/new">Create New Product</a>
          </nav>
        </div>
      </aside>

      <!-- Main -->
      <main class="w-full md:w-3/4">
        <div class="bg-white rounded-xl p-6 md:p-8 shadow">
          <h2 class="text-2xl font-bold mb-6">Create New Product</h2>

          <form autocomplete="off" action="/products/create" method="post" enctype="multipart/form-data" class="space-y-8">
            <!-- Product Details -->
            <section>
              <h3 class="text-lg font-semibold mb-4">Product Details</h3>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="col-span-1">
                  <label class="block mb-2 font-medium">Product Image</label>
                  <input name="image" type="file" accept="image/*" class="block w-full border rounded px-3 py-2">
                  <p class="text-xs text-gray-500 mt-1">PNG/JPG up to ~5MB recommended.</p>
                </div>

                <div class="col-span-1">
                  <label class="block mb-2 font-medium">Product Name <span class="text-rose-500">*</span></label>
                  <input name="name" type="text" placeholder="e.g. Cotton Tote Bag" required
                         class="border p-2 rounded w-full">
                </div>

                <div class="col-span-1">
                  <label class="block mb-2 font-medium">Product Price (₹) <span class="text-rose-500">*</span></label>
                  <input name="price" type="number" min="0" step="0.01" placeholder="e.g. 799" required
                         class="border p-2 rounded w-full">
                </div>

                <div class="col-span-1">
                  <label class="block mb-2 font-medium">Discount Price (₹)</label>
                  <input name="discount" type="number" min="0" step="0.01" placeholder="e.g. 599"
                         class="border p-2 rounded w-full">
                </div>
              </div>
            </section>

            <!-- Panel Details -->
            <section>
              <h3 class="text-lg font-semibold mb-4">Panel Details</h3>

              <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <!-- Background Color -->
                <div>
                  <label class="block mb-2 font-medium">Background Color</label>
                  <div class="flex gap-3 items-center">
                    <input id="bgcolor" name="bgcolor" type="text" placeholder="#f9f9f9"
                           pattern="^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
                           class="border p-2 rounded w-full"
                           oninput="syncColorInput('bgcolor','bgcolorPicker','bgSwatch')">
                    <input id="bgcolorPicker" type="color" value="#f9f9f9"
                           class="w-10 h-10 p-0 border rounded"
                           oninput="syncColorPicker('bgcolor','bgcolorPicker','bgSwatch')">
                    <span id="bgSwatch" class="inline-block w-6 h-6 rounded border" style="background:#f9f9f9"></span>
                  </div>
                  <p class="text-xs text-gray-500 mt-1">Hex color (e.g., #f9f9f9)</p>
                </div>

                <!-- Panel Color -->
                <div>
                  <label class="block mb-2 font-medium">Panel Color</label>
                  <div class="flex gap-3 items-center">
                    <input id="panelcolor" name="panelcolor" type="text" placeholder="#ffffff"
                           pattern="^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
                           class="border p-2 rounded w-full"
                           oninput="syncColorInput('panelcolor','panelcolorPicker','panelSwatch')">
                    <input id="panelcolorPicker" type="color" value="#ffffff"
                           class="w-10 h-10 p-0 border rounded"
                           oninput="syncColorPicker('panelcolor','panelcolorPicker','panelSwatch')">
                    <span id="panelSwatch" class="inline-block w-6 h-6 rounded border" style="background:#ffffff"></span>
                  </div>
                </div>

                <!-- Text Color -->
                <div>
                  <label class="block mb-2 font-medium">Text Color</label>
                  <div class="flex gap-3 items-center">
                    <input id="textcolor" name="textcolor" type="text" placeholder="#000000"
                           pattern="^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
                           class="border p-2 rounded w-full"
                           oninput="syncColorInput('textcolor','textcolorPicker','textSwatch')">
                    <input id="textcolorPicker" type="color" value="#000000"
                           class="w-10 h-10 p-0 border rounded"
                           oninput="syncColorPicker('textcolor','textcolorPicker','textSwatch')">
                    <span id="textSwatch" class="inline-block w-6 h-6 rounded border" style="background:#000000"></span>
                  </div>
                </div>
              </div>
            </section>

            <div class="pt-2">
              <button type="submit"
                      class="inline-flex items-center gap-2 px-5 py-2.5 rounded bg-blue-600 text-white hover:bg-blue-700 transition">
                <i class="ri-add-line text-lg"></i>
                Create New Product
              </button>
            </div>
          </form>
        </div>
      </main>
    </div>
  </div>

  <%- include('./partials/footer') %>

  <!-- Small helpers for color inputs + auto-hide flash -->
  <script>
    function isValidHex(v) {
      return /^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$/.test(v);
    }
    function syncColorPicker(textId, pickerId, swatchId) {
      const input = document.getElementById(textId);
      const picker = document.getElementById(pickerId);
      const swatch = document.getElementById(swatchId);
      if (picker && input) {
        input.value = picker.value;
        if (swatch) swatch.style.background = picker.value;
      }
    }
    function syncColorInput(textId, pickerId, swatchId) {
      const input = document.getElementById(textId);
      const picker = document.getElementById(pickerId);
      const swatch = document.getElementById(swatchId);
      if (input && picker && isValidHex(input.value)) {
        picker.value = input.value;
        if (swatch) swatch.style.background = input.value;
      }
    }
    // Auto-hide flash messages after 2.5s
    setTimeout(() => {
      const flashes = document.querySelectorAll('.fixed.top-5');
      flashes.forEach(el => el.remove());
    }, 2500);
  </script>
</body>
</html>
