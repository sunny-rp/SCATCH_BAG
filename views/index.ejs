<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Scatch | Home</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-white">

    <%- include('./partials/header') %>

    <% if (typeof error !== 'undefined' && error.length > 0) { %>
        <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500 shadow-lg">
            <span class="inline-block text-white font-medium">
                <%= error %>
            </span>
        </div>
    <% } %>

    <div class="w-full h-screen flex px-20">
        <!-- Register Section -->
        <div class="w-1/2 flex items-center justify-center h-screen">
            <div class="w-full px-32">
                <h3 class="text-4xl font-semibold">Welcome to <span class="text-blue-500">Scatch</span></h3>
                <h4 class="text-2xl mb-5 text-gray-600">Create your account</h4>
                
                <form autocomplete="off" action="/users/register" method="post">
                    <input
                        class="bg-zinc-100 block w-full px-3 py-2 border rounded-md mb-3 border-zinc-200 focus:outline-blue-400"
                        type="text" placeholder="Full Name" name="fullname" required>
                    
                    <input
                        class="bg-zinc-100 block w-full px-3 py-2 border rounded-md mb-3 border-zinc-200 focus:outline-blue-400"
                        type="email" placeholder="Email" name="email" required>
                    
                    <input
                        class="bg-zinc-100 block w-full px-3 py-2 border rounded-md mb-3 border-zinc-200 focus:outline-blue-400"
                        type="password" placeholder="Password" name="password" required>
                    
                    <input 
                        class="px-5 rounded-full py-3 mt-2 bg-blue-500 hover:bg-blue-600 cursor-pointer text-white font-medium"
                        type="submit" value="Create My Account">
                </form>
            </div>
        </div>

        <!-- Login Section -->
        <div class="w-1/2 flex items-center justify-center h-screen border-l border-gray-200">
            <div class="w-full px-32">
                <h4 class="text-2xl capitalize mb-5 text-gray-600">Login to your account</h4>
                
                <form autocomplete="off" action="/users/login" method="post">
                    <input
                        class="bg-zinc-100 block w-full px-3 py-2 border rounded-md mb-3 border-zinc-200 focus:outline-blue-400"
                        type="email" placeholder="Email" name="email" required>
                    
                    <input
                        class="bg-zinc-100 block w-full px-3 py-2 border rounded-md mb-3 border-zinc-200 focus:outline-blue-400"
                        type="password" placeholder="Password" name="password" required>
                    
                    <input 
                        class="px-5 block rounded-full py-3 mt-2 bg-blue-500 hover:bg-blue-600 cursor-pointer text-white font-medium"
                        type="submit" value="Login">
                </form>
            </div>
        </div>
    </div>

    <%- include('./partials/footer') %>
</body>
</html>
