<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Scatch | Shop</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Tailwind -->
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- Remix Icons -->
  <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">
</head>
<body class="bg-white text-gray-900">

  <%- include('./partials/header') %>

  <div class="w-full flex flex-col md:flex-row px-6 md:px-20 py-10 gap-10">
    
    <!-- Sidebar -->
    <div class="w-full md:w-[25%] flex flex-col">
      <!-- Sort -->
      <div class="flex items-center gap-2 mb-6">
        <h3 class="font-semibold">Sort by:</h3>
        <form action="/shop" method="get">
          <% const _sortby = (typeof sortby !== 'undefined' && sortby) ? sortby : 'popular'; %>
          <select 
            class="border px-2 py-1 rounded-md"
            name="sortby"
            onchange="this.form.submit()">
            <option value="popular" <%= _sortby === 'popular' ? 'selected' : '' %>>Popular</option>
            <option value="newest"  <%= _sortby === 'newest'  ? 'selected' : '' %>>Newest</option>
          </select>
        </form>
      </div>

      <!-- Categories -->
      <div class="flex flex-col mt-6">
        <h4 class="font-semibold mb-3">Categories</h4>
        <a class="block w-fit mb-2 hover:text-blue-500" href="/shop?filter=new">New Collection</a>
        <a class="block w-fit mb-2 hover:text-blue-500" href="/shop">All Products</a>
        <a class="block w-fit mb-2 hover:text-blue-500" href="/shop?filter=discount">Discounted Products</a>
      </div>

      <!-- Filters -->
      <div class="mt-10">
        <h4 class="font-semibold mb-3">Filter by:</h4>
        <a class="block w-fit mb-2 hover:text-blue-500" href="/shop?filter=availability">Availability</a>
        <a class="block w-fit mb-2 hover:text-blue-500" href="/shop?filter=discount">Discount</a>
      </div>
    </div>

    <!-- Products Section -->
    <div class="w-full md:w-[75%] flex flex-col gap-6">
      <h2 class="text-2xl font-semibold mb-4">Products</h2>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% if (products && products.length > 0) { %>
          <% products.forEach((product) => { %>
            <div class="w-full shadow rounded-lg overflow-hidden border bg-white hover:shadow-lg transition">
              
              <!-- Product Image -->
              <div class="w-full h-52 flex items-center justify-center"
                   style="background-color:<%= product.bgcolor || '#f9f9f9' %>">
                <% if (product.image) { %>
                  <!-- Fixed image buffer access and base64 conversion -->
                  <img 
                    class="h-[12rem] object-contain" 
                    src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" 
                    alt="<%= product.name %>">
                <% } else { %>
                  <img class="h-[8rem] opacity-70" src="/placeholder.jpg" alt="No Image">
                <% } %>
              </div>

              <!-- Product Info -->
              <div class="flex justify-between items-center px-4 py-4"
                   style="background-color:<%= product.panelcolor || '#fff' %>; color:<%= product.textcolor || '#000' %>">
                <div>
                  <h3 class="font-medium"><%= product.name %></h3>
                  <h4 class="font-semibold">â‚¹ <%= product.price %></h4>
                  <% if (product.discount && product.discount > 0) { %>
                    <p class="text-sm text-red-500">Discount: <%= product.discount %>%</p>
                  <% } %>
                </div>
                <!-- Added delete button alongside add to cart button -->
                <div class="flex gap-2">
                  <button 
                    onclick="deleteProduct('<%= product._id %>')"
                    class="w-8 h-8 flex items-center justify-center rounded-full bg-red-500 text-white hover:bg-red-600 shadow transition" 
                    title="Delete Product">
                    <i class="ri-delete-bin-line text-sm"></i>
                  </button>
                  <a 
                    class="w-8 h-8 flex items-center justify-center rounded-full bg-blue-500 text-white hover:bg-blue-600 shadow transition" 
                    href="/cart/add/<%= product._id %>">
                    <i class="ri-add-line text-lg"></i>
                  </a>
                </div>
              </div>

            </div>
          <% }) %>
        <% } else { %>
          <p class="text-gray-500 col-span-3 text-center py-10">No products available.</p>
        <% } %>
      </div>
    </div>
  </div>

  <%- include('./partials/footer') %>

  <!-- Added JavaScript for delete functionality -->
  <script>
    async function deleteProduct(productId) {
      if (confirm('Are you sure you want to delete this product?')) {
        try {
          const response = await fetch(`/products/delete/${productId}`, {
            method: 'DELETE',
            headers: {
              'Content-Type': 'application/json',
            },
          });

          if (response.ok) {
            // Reload the page to show updated product list
            window.location.reload();
          } else {
            alert('Error deleting product. Please try again.');
          }
        } catch (error) {
          console.error('Error:', error);
          alert('Error deleting product. Please try again.');
        }
      }
    }
  </script>
</body>
</html>
